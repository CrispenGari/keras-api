   "source": [
    "### Method 2: ``ImageDataGenerator`` and ``flow_from_directory``"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 33,
   "id": "every-terror",
   "metadata": {},
   "outputs": [],
   "source": [
    "datagen = ImageDataGenerator(\n",
    "    rescale=1.0 / 255,\n",
    "    rotation_range=5,\n",
    "    zoom_range=(0.5, 0.5),\n",
    "    data_format=\"channels_last\",\n",
    "    dtype=tf.float32,\n",
    ")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 34,
   "id": "sunrise-clinic",
   "metadata": {},
